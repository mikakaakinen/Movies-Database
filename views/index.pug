extends layout

block content
  img.bg(src='https://mika-kaakinen-bucket.s3.eu-west-2.amazonaws.com/bg_1.jpg' alt='Elokuvat')
  header
    .logo
      .photo
        img(src='https://mika-kaakinen-bucket.s3.eu-west-2.amazonaws.com/e_9thumb.jpg' alt='Eddie Vedder' height='100' width='73')
      .name
        h1 Hyv&auml;t elokuvat- tietokanta
      #navToggle
        a(href='#') Menu
    nav
      ul
        li.nav__item
          a.nav__link(href='/')
            i.fas.fa-home
            | Home
        li.nav__item
          a.nav__link(href='../arvot')
            i.far.fa-heart
            | Arvot
        li.nav__item
          a.nav__link(href='../osaaminen')
            i.fas.fa-database
            | Taidot
        li.nav__item.nav__item--sub
          a.nav__link(href='#')
            i.fas.fa-chess-king
            | Harrastukset
            span.toggle Expand
            i.fa.fa-angle-down
          ul.children
            li.nav__item--sub
              a.nav__link--sub(href='../elokuvat') Elokuvat
            li.nav__item--sub
              a.nav__link--sub(href='../italia') Italia
            li.nav__item--sub
              a.nav__link--sub(href='../kirjallisuus') Kirjallisuus
            li.nav__item--sub
              a.nav__link--sub(href='../musiikki') Musiikki
            li.nav__item--sub
              a.nav__link--sub(href='../shakki') Shakki
            li.nav__item--sub
              a.nav__link--sub(href='../liikunta') Liikunta
            li.nav__item--sub
              a.nav__link--sub(href='../kuvagalleria') Kuvagalleria
            li.nav__item--sub
              a.nav__link--sub(href='../brucespringsteen') Bruce Springsteen
            li.nav__item--sub
              a.nav__link--sub(href='../eddievedder') Eddie Vedder
            li.nav__item--sub
              a.nav__link--sub(href='../karuselli') Karuselli
        li.nav__item.nav__item--sub
          a.nav__link(href='#')
            i.fas.fa-language
            | Kielet
            span.toggle Expand
            i.fa.fa-angle-down
          ul.children
            li.nav__item--sub
              a.nav__link--sub(href='#') FI
            li.nav__item--sub
              a.nav__link--sub(href='../english') EN
            li.nav__item--sub
              a.nav__link--sub(href='../swedish') SE
            li.nav__item--sub
              a.nav__link--sub(href='../italian') IT
  main
    .content
      h2 Tervetuloa Hyv&auml;t elokuvat- tietokantaan 
      h3 Alla n&auml;et kaikki ne elokuvat, joita voit hakea tietokannasta
      h3 28 Weeks Later, Notting Hill
      - var nimet = ["28 Weeks Later", "Notting Hill", "Seven"];
      each nimi in nimet
        h3=nimi
      form.text-top(action='/' method='post')
        label(for='elokuvan nimi') Sy&ouml;t&auml; elokuvan nimi:
        input(type='text' name='nimi_kentta' id='elokuvan nimi' value='Elokuvan nimi')
        input(type='submit' value='Lähetä')
      .flex__container
        if docs
          each doc in docs
            .flex__item--1
              h2.text-top.text-bottom.b-r-u-2 Tulokset tietokannasta
              h3.b-r-u-1 Elokuvan nimi
              p.text-center #{doc['Elokuvan_nimi']}
              h3.b-r-u-1 N&auml;yttelij&auml;t
              p.text-center #{doc['Nayttelijat']}
              h3.b-r-u-1 Genre
              p.text-center #{doc['Genre']}
              h3.b-r-u-1 Rotten Tomatoes pisteet
              p.text-center #{doc['Rotten_Tomatoes_pisteet']}
              h3.b-r-u-1 Sertifikaatti
              p.text-center #{doc['Sertifikaatti']}
              h3.b-r-u-1 Kuvaus
              p.text-center #{doc['Kuvaus']}
              h3.b-r-u-1 Oma arvio
              p.text-center #{doc['Oma_arvio']}
            .flex__item--2
              img.border(alt='Elokuva' src=`${doc['Kuva']}`)   